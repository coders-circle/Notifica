<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:focusable="true">

    <TextView
        android:id="@+id/sub_shortname"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:padding="8dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="X"
        android:textColor="@color/textPrimaryHeading"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/border_octagon"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@id/sub_shortname">
        <TextView
            android:id="@+id/time"
            android:text="time"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/subject"
            android:layout_marginTop="4dp"
            android:text="subject"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/teachers"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:text="Mr. Absolute Zero, bla bla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/remarks"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>