<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:focusable="true">

    <TextView
        android:id="@+id/sub_shortname"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:padding="8dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        android:background="@drawable/circle_filled"
        android:text="X"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/mark_practical"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:text="Practical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@id/sub_shortname">
        <TextView
            android:id="@+id/time"
            android:text="time"
            android:textSize="12sp"
            android:textColor="@color/primaryTextLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/subject"
            android:layout_marginTop="4dp"
            android:text="subject"
            android:textColor="@color/primaryText"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/teachers"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/primaryTextLight"
            android:text="Mr. Absolute Zero, bla bla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/remarks"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/primaryTextLight"
            android:text="remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>